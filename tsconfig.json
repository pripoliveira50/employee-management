{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["jest"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@global/*": ["global/*"],
      "@tokens/*": ["global/tokens/*"],
      "@infra/*": ["infra/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "extends": "expo/tsconfig.base"
}
